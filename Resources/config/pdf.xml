<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="knp.snappy.pdf.executable">wkhtmltopdf</parameter>
        <parameter key="knp.snappy.pdf.options" type="collection"></parameter>
        <parameter key="knp.snappy.pdf.class">Knp\Snappy\Pdf</parameter>
    </parameters>

    <services>
        <service id="knp_snappy_pdf" class="%knp.snappy.pdf.class%">
            <argument>%knp.snappy.pdf.executable%</argument>
            <argument>%knp.snappy.pdf.options%</argument>
        </service>
  </services>
</container>
