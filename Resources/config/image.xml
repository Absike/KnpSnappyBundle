<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="knp.snappy.image.executable">wkhtmltoimage</parameter>
        <parameter key="knp.snappy.image.options" type="collection"></parameter>
        <parameter key="knp.snappy.image.class">Knp\Snappy\Image</parameter>
    </parameters>

    <services>
        <service id="knp_snappy_image" class="%knp.snappy.image.class%">
            <argument>%knp.snappy.image.executable%</argument>
            <argument>%knp.snappy.image.options%</argument>
        </service>
  </services>
</container>
